<html>
    <head>
        
        <title>
            <%=locals.title%>
        </title>
        <!--title passed as a key in an object from 
        index.js file , and its value has been replaced while rendering -->

    </head>

    <body>
        <h1>Contact List</h1>
        <div>
            <ul>
                <%for (let i of contact_list) {%>
                    <li>
                        <p><%= i.name %></p>
                        <p><%= i.phone %></p>
                    </li>

                 <%}%>   
            </ul>

        </div>

        <!--form to take input from user-->
        <form action="create-contact" method="POST">
            <input type = "text" name="name" placeholder="Enter Name" required>
            <input type = "number" name = "phone" placeholder="Enter phone" required>

            <button type = "submit">Add Contact</button>
        </form>
    
    </body>
</html>